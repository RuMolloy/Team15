<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity"
        android:background="@color/colorBackground">

    <RelativeLayout
            android:id="@+id/ll_team_and_match_info"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ll_pitch"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintVertical_weight="1.5">

        <include android:id="@+id/ll_team_a"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_alignParentStart="true"
                 layout="@layout/team_crest"/>

        <include android:id="@+id/rl_team_names"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_toRightOf="@+id/ll_team_a"
                 android:layout_toLeftOf="@+id/ll_team_b"
                 android:layout_marginLeft="@dimen/fab_margin"
                 android:layout_marginRight="@dimen/fab_margin"
                 layout="@layout/match_info_read"/>

        <LinearLayout
                android:id="@+id/ll_match_info_read"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true">

            <include android:id="@+id/rl_competition_read"
                     layout="@layout/match_info_read"/>

            <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>

            <include android:id="@+id/rl_venue_write_read"
                     layout="@layout/match_info_read"/>

            <android.support.v4.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>

            <include android:id="@+id/rl_time_write_read"
                     layout="@layout/match_info_read"/>
        </LinearLayout>

        <include android:id="@+id/ll_team_b"
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_alignParentEnd="true"
                 layout="@layout/team_crest"/>
    </RelativeLayout>

    <!--<View-->
    <!--android:id="@+id/view_separator"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@android:color/darker_gray"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--app:layout_constraintBottom_toTopOf="@+id/ll_pitch"/>-->

    <LinearLayout
            android:id="@+id/ll_pitch"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_team_and_match_info"
            app:layout_constraintBottom_toTopOf="@id/ll_hashtags"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="7.25"
            android:background="@drawable/pitch">

        <!--android:background="@drawable/pitch"-->

        <view
                android:id="@+id/view_pitch"
                class="com.team15app.team15.PitchView"
                android:paddingTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_hashtags"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="right"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_pitch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="0">

        <TextView
                android:id="@+id/tv_hashtag_one"
                android:text="@string/default_hashtag_one"
                android:textSize="@dimen/font_size_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"/>

        <TextView
                android:id="@+id/tv_hashtag_two"
                android:text="@string/default_hashtag_two"
                android:textSize="@dimen/font_size_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"/>

        <TextView
                android:id="@+id/tv_hashtag_three"
                android:text="@string/default_hashtag_three"
                android:textSize="@dimen/font_size_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>